<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon4"
    android:padding="16dp">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="3" />


    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일반\n정보"
        android:fontFamily="@font/bmpro"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/red"/>
    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:fontFamily="@font/bmpro"
        android:layout_height="wrap_content"
        android:text="안전\n공지"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="280dp"
        android:backgroundTint="@color/btn2"/>
    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmpro"
        android:text="입국\n허가"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="250dp"
        android:backgroundTint="@color/btn3"/>
    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmpro"
        android:layout_marginTop="250dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginLeft="280dp"
        android:text="특별\n여행"
        android:backgroundTint="@color/btn4"/>
    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여행\n경보"
        android:fontFamily="@font/bmpro"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="400dp"
        android:backgroundTint="@color/btn5" />
    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경보\n조정"
        android:fontFamily="@font/bmpro"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="400dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/btn6"
        android:layout_marginLeft="280dp"/>
    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:fontFamily="@font/bmpro"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:backgroundTint="@color/btn8"
        android:text="현지\n연락" />
    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmpro"
        android:layout_marginTop="550dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginLeft="280dp"
        android:backgroundTint="@color/btn9"
        android:text="최신\n뉴스"/>




</RelativeLayout>